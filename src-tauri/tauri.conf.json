{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "shadowpuppet",
  "version": "0.1.0",
  "identifier": "com.shadowpuppet.dev",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "",
    "devUrl": "http://localhost:8000",
    "frontendDist": null
  },
  "app": {
    "windows": [
      {
        "title": "shadowpuppet",
        "width": 1600,
        "height": 1200,
        "resizable": true,
        "fullscreen": false,
        "maximized": true,
        "url": "http://localhost:8000"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "resources": [
      "resources/*"
    ],
    "externalBin": [
      "../server/dist/shadowpuppet-server"
    ],
    "active": true,
    "targets": ["appimage", "nsis", "app"], 
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}